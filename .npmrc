# Skip optional dependencies to avoid platform-specific binary issues
optional=false

# Use npm ci for faster, more reliable installs
prefer-offline=true

# Skip audit during install for faster builds
audit=false

# Ensure we use the correct registry
registry=https://registry.npmjs.org/

# Exclude platform-specific binaries
omit=optional

# Force npm to ignore platform-specific dependencies
platform=linux
arch=x64

# Force pure JavaScript - skip native binaries
rollup-skip-native=true

# Skip scripts that might install native binaries
ignore-scripts=true 